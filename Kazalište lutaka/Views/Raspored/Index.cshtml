@model IEnumerable<Kazalište_lutaka.Models.Raspored>

@{
    ViewData["Title"] = "Index";
}

<h2></h2>

<p>
    <a asp-action="Create">Unesi novi termin predstave</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DatPredstave)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Predstave)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DatPredstave)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Predstave.Naziv)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Uredi</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalji</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Obriši</a>
            </td>
        </tr>
}
    </tbody>
</table>
